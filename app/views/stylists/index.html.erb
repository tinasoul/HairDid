<h1>Listing stylists</h1>

<table>
  <tr>
    <th>Avatar</th>
    <th>Full name</th>
    <th>Email</th>
    <th>Password</th>
    <th>Phone number</th>
    <th>Location</th>
    <th>Salon name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stylists.each do |stylist| %>
  <tr>
    <td><%= stylist.avatar %></td>
    <td><%= stylist.full_name %></td>
    <td><%= stylist.email %></td>
    <td><%= stylist.password %></td>
    <td><%= stylist.phone_number %></td>
    <td><%= stylist.location %></td>
    <td><%= stylist.salon_name %></td>
    <td><%= stylist.description %></td>
    <td><%= link_to 'Show', stylist %></td>
    <td><%= link_to 'Edit', edit_stylist_path(stylist) %></td>
    <td><%= link_to 'Destroy', stylist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

