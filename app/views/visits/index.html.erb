<h1>Listing visits</h1>

<table>
  <tr>
    <th>Front photo</th>
    <th>Side photo</th>
    <th>Back photo</th>
    <th>Description</th>
    <th>Date of visit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @visits.each do |visit| %>
  <tr>
    <td><%= visit.front_photo %></td>
    <td><%= visit.side_photo %></td>
    <td><%= visit.back_photo %></td>
    <td><%= visit.description %></td>
    <td><%= visit.date_of_visit %></td>
    <td><%= link_to 'Show', visit %></td>
    <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
    <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

